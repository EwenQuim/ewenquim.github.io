---
import ListHeader from "../components/ListHeader.astro";
import FormattedDate from "../components/FormattedDate.astro";
import { Image } from "astro:assets";
import MainLayout from "./MainLayout.astro";

type Props = {
  title: string;
  description?: string;
  pubDate?: Date;
  updatedDate?: Date;
  heroImage?: string;
  [key: string]: unknown; // Allow additional properties
};

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<MainLayout title={title} description={description}>
  <ListHeader />
  <main>
    <article class="p-4 md:p-8 rounded-lg prose dark:prose-invert max-w-none">
      <!-- Search indexable content (hidden) -->
      <div data-pagefind-body style="display: none;">
        <h1 data-pagefind-meta="title">{title}</h1>
        {description && <p data-pagefind-meta="description">{description}</p>}
      </div>

      <!-- Visible content -->
      <hgroup>
        <h1 class="text-3xl mt-1 mb-0">{title}</h1>
        {
          pubDate && (
            <p class="italic">
              <FormattedDate date={pubDate} />
              {updatedDate && (
                <>
                  (updated on <FormattedDate date={updatedDate} />){" "}
                </>
              )}
            </p>
          )
        }
      </hgroup>
      {description && <p>{description}</p>}
      {
        heroImage && (
          <Image
            width={720}
            height={360}
            src={heroImage}
            format="webp"
            alt=""
            class="rounded-lg"
          />
        )
      }

      <div data-pagefind-ignore>
        <slot />
      </div>
    </article>
  </main>
</MainLayout>
