---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import ListHeader from "../components/ListHeader.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import { Image } from "astro:assets";

type Props = CollectionEntry<"articles">["data"];

const { title, description, date, updatedDate, heroImage } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body>
    <ListHeader />
    <main>
      <article class="p-4 md:p-8 rounded-lg prose prose-invert">
        <hgroup>
          <h1 class="text-3xl mt-1 mb-0">{title}</h1>
          <p class="italic">
            <FormattedDate date={date} />
            {
              updatedDate && (
                <>
                  (updated on <FormattedDate date={updatedDate} />){" "}
                </>
              )
            }
          </p>
        </hgroup>
        <p>{description}</p>
        {
          heroImage && (
            <Image
              width={720}
              height={360}
              src={heroImage}
              format="webp"
              alt=""
              class="rounded-lg"
            />
          )
        }

        <slot />
      </article>
    </main>
    <Footer />
  </body>
</html>
