---
import { Image } from "astro:assets";

const { post, category } = Astro.props;
---

<li
  class="bg-white p-4 md:p-8 rounded-lg shadow-md w-11/12 md:w-7/8 flex items-center gap-8 max-w-4xl"
>
  {
    post.data.heroImage && (
      <Image
        class={"rounded-lg hidden md:block mr-4"}
        src={post.data.heroImage}
        alt={post.data.title}
        format="webp"
        width={100}
        height={100}
        quality={80}
      />
    )
  }
  <div>
    <h2 class="w-full inline-flex justify-between items-baseline">
      <a rel="prefetch" href={`/${category}/${post.slug}`}>{post.data.title}</a>
      {
        post.data.github && (
          <a
            href={`https://github.com/${post.data.github}`}
            target="_blank"
            rel="noopener noreferrer"
            class="flex gap-2"
          >
            <img
              class="as"
              src={`https://img.shields.io/github/stars/${post.data.github}?style=social`}
            />
          </a>
        )
      }
    </h2>
    {
      post.data.playstore && (
        <a
          href={`https://play.google.com/store/apps/details?id=${post.data.playstore}`}
        >
          <img
            src="https://img.shields.io/badge/play%20store-available-green"
            alt=""
            srcset=""
          />
        </a>
      )
    }

    <p class="mb-0">{post.data.description}</p>
  </div>
</li>

<style>
  h2 {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0;
  }
  h2 a {
    color: #000;
    text-decoration: none;
  }
</style>
