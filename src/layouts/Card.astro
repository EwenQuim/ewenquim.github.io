---
import { Image } from "@astrojs/image/components";

const { post, category } = Astro.props;
---

<li
  class="bg-white p-4 md:p-8 rounded-lg md:rounded-lg shadow-md w-11/12 md:w-7/8 flex items-center gap-8 max-w-4xl"
>
  {
    post.data.heroImage && (
      <Image
        class={"rounded-lg hidden md:block mr-4"}
        src={post.data.heroImage}
        alt={post.data.title}
        format="webp"
        width={100}
        height={100}
        quality={80}
      />
    )
  }
  <div>
    <h2>
      <a rel="prefetch" href={`/${category}/${post.slug}`}>{post.data.title}</a>
    </h2>
    <p class="mb-0">{post.data.description}</p>
  </div>
</li>

<style>
  h2 {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0;
  }
  h2 a {
    color: #000;
    text-decoration: none;
  }
</style>
