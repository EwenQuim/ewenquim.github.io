---
import HeaderLink from "./HeaderLink.astro";
import SearchButton from "./SearchButton.astro";
import { SITE_TITLE } from "../consts";
---

<header class="text-center flex flex-col gap-4 py-4 md:py-8">
  <h1 class="font-bold text-3xl text-white">
    <a href="/">
      {SITE_TITLE}
    </a>
  </h1>

  <nav class="flex items-center justify-center gap-2 flex-wrap">
    <div class="flex items-center gap-2">
      <HeaderLink href="/articles">Articles</HeaderLink>
      &middot;
      <HeaderLink href="/nouvelles">Nouvelles</HeaderLink>
      &middot;
      <HeaderLink href="/projects">Projets</HeaderLink>
      &middot;
      <HeaderLink href="/contact">Contact</HeaderLink>
    </div>
    <div class="ml-4">
      <SearchButton />
    </div>
  </nav>
</header>
