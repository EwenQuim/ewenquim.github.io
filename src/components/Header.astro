---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";

const { isTitle } = Astro.props;
---

<header class="text-center">
  <h2 class="font-bold">
    <a href="/">
      {SITE_TITLE}
    </a>
  </h2>
  {isTitle && <p class="italic">Centralien &middot; Software Engineer</p>}
  <nav class="my-4">
    <HeaderLink href="/articles">Articles</HeaderLink>
    <HeaderLink href="/nouvelles">Nouvelles</HeaderLink>
    <HeaderLink href="/projects">Projets</HeaderLink>
  </nav>
</header>
<style>
  header {
    margin: 0em 0 2em;
  }
  h2 {
    margin: 0.5em 0;
  }
  h2 a {
    color: var(--color-text);
    text-decoration: none;
  }
</style>
