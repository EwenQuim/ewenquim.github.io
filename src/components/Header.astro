---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header class="text-center md:pt-4 flex flex-col gap-8">
  <h1 class="font-bold text-3xl text-white">
    {SITE_TITLE}
  </h1>

  <p class="italic opacity-70">Centralien &middot; Software Engineer</p>

  <nav>
    <a
      rel="prefetch"
      data-astro-prefetch
      href="/articles"
      class="mx-2 !text-white">Articles</a
    >
    &middot;
    <a
      rel="prefetch"
      data-astro-prefetch
      href="/nouvelles"
      class="mx-2 !text-white">Nouvelles</a
    >
    &middot;
    <a
      rel="prefetch"
      data-astro-prefetch
      href="/projects"
      class="mx-2 !text-white">Projets</a
    >
  </nav>
</header>
