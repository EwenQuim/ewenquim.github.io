---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";

const { isTitle } = Astro.props;
---

<header class="text-center md:pt-4 flex flex-col gap-8">
  <h1 class="font-bold text-2xl text-white">
    {SITE_TITLE}
  </h1>

  {isTitle && <p class="italic">Centralien &middot; Software Engineer</p>}
  <nav>
    <HeaderLink href="/articles">Articles</HeaderLink>
    &middot;
    <HeaderLink href="/nouvelles">Nouvelles</HeaderLink>
    &middot;
    <HeaderLink href="/projects">Projets</HeaderLink>
  </nav>
</header>
