---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { Image } from "astro:assets";
import ewen from "/public/ewen.jpg";
import Footer from "../components/Footer.astro";
import Silk from "../Silk/Silk";
---

<!doctype html>
<html lang="en" class="h-full">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class="h-full relative">
    <!-- Silk background covering the entire page -->
    <div class="fixed inset-0 w-full h-full z-0">
      <!-- color="#7B7481" -->
      <Silk
        client:load
        speed={5}
        scale={1}
        color="#6F4625"
        noiseIntensity={2}
        rotation={0}
      />
    </div>

    <!-- Content layer on top of the background -->
    <div
      class="relative z-10 h-full flex flex-col items-center justify-center text-white"
    >
      <main class="flex-1 flex flex-col items-center justify-center gap-8">
        <Image
          class="p-[4px] bg-white w-48 h-48 avatar rounded-full border border-sm border-white"
          src={ewen}
          alt="Ewen"
          quality={100}
          width={400}
          height={400}
        />

        <Header isTitle={true} />
      </main>
      <Footer />
    </div>
  </body>
</html>
