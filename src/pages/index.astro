---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header title={SITE_TITLE} />
    <main>
      <img
        class="avatar w-48 h-48 rounded-full border-[6px] border-white"
        src="/ewen.jpg"
        alt="Ewen"
        width="192"
        height="192"
      />
      <h1 class="text-3xl">Ewen Quimerc'h</h1>
      <p class="tagline italic">Centralien &middot; Software Engineer</p>
    </main>
    <Footer />
  </body>
</html>
